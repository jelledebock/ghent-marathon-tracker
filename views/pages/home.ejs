<!-- views/pages/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); -%>
</head>
<body class="container">
    <header>
        <%- include('../partials/header'); -%>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.2.1/css/ol.css" type="text/css">
        <style>
          .map {
            margin-top: 10px;
            height: 100vh;
            width: 100%;
          }
        </style>
        <script src="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.2.1/build/ol.js"></script>
    </header>

    <main>
        <div class='container'>
            <div class='race-status-bar'>
                <div class='col col-md-4'><h5>Race status</h5><span id='race-status' class='btn btn-warning'>Not live</span></div>
                <div class='col col-md-4'><h5>Parcours info </h5><%-(parcours.total_distance/1000).toFixed(2) -%> km</div>
            </div>
            <br>
            <div id="map" class="map"></div>
        </div>		
    </main>
    <br>
    <footer>
        <%- include('../partials/footer'); -%>
    </footer>
    <script src='./js/race-center.js'></script>
</body>
</html>